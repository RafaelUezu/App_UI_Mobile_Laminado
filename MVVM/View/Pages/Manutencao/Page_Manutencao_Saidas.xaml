<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_UI_Mobile_Laminado.MVVM.View.Pages.Manutencao.Page_Manutencao_Saidas"
             Title="Page Manutenção Saídas">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border
           Grid.Row="0"
           Stroke="Black"
           StrokeThickness="2"
           Padding="5"
           StrokeShape="RoundRectangle 10">
        <Entry
                x:Name ="txtInput"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                Text="{Binding BoundText, Mode=TwoWay}"
                FontSize="16"
                Margin="5,5,5,5"/>
        </Border>

        <Border
            Stroke="Black"
            StrokeThickness="2"
            Padding="5"
            StrokeShape="RoundRectangle 10"
            Grid.Row="1"
            >
            <Button
                
                Text="Enviar"
                Command="{Binding SendCommand}"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Border>

        <Border
            Grid.Row="2"
            Stroke="Black"
            StrokeThickness="2"
            Padding="5"
            StrokeShape="RoundRectangle 10"
            >
            <Label
            Text="{Binding BoundText, Mode=TwoWay}"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="16"
            TextColor="Black"
            Margin="5,5,5,5"/>
        </Border>


    </Grid>
</ContentPage>