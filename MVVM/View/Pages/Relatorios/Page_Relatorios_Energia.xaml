<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_UI_Mobile_Laminado.MVVM.View.Pages.Relatorios.Page_Relatorios_Energia"
             Title="Relatório de Energia"
             Background="{StaticResource Normal_Cor6}"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout
            Grid.Column="0"
            Background="{StaticResource Normal_Cor5}"
            Margin="5,5,5,5"
            >
            <Frame
                CornerRadius="5"
                Padding="5"
                BackgroundColor="{StaticResource Normal_Cor4}"
                Margin="10,10,10,10"
                >
                <Grid
                    ColumnDefinitions="Auto, *, Auto"
                    Padding="10"
                    >
                    <Label
                        Grid.Column="0"
                        Text="Potência"
                        FontSize="Medium"
                        TextColor="White"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        />
                    <Label
                        Grid.Column="2"
                        Text="100 kW"
                        FontSize="Medium"
                        TextColor="Gold"
                        HorizontalOptions="End"
                        />
                </Grid>
            </Frame>
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Column="1"
            Background="{StaticResource Normal_Cor5}"
            Margin="5,5,5,5"
            >
            <Frame
                CornerRadius="5"
                Padding="5"
                BackgroundColor="{StaticResource Normal_Cor4}"
                Margin="5,5,5,5"
                >
                <Grid
                    ColumnDefinitions="Auto, *, Auto"
                    >
                    <Label
                        Grid.Column="0"
                        Text="Tensão da Fase Neutro (A)"
                        FontSize="Small"
                        TextColor="White"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        />
                    <Label
                        Grid.Column="2"
                        Text="{Binding iTensaoAN, StringFormat='{0} V'}"
                        FontSize="Small"
                        TextColor="Gold"
                        HorizontalOptions="End"
                        />
                </Grid>  
            </Frame>
            
            
        </VerticalStackLayout>
        
        
        
    </Grid>
</ContentPage>