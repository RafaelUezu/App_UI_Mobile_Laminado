<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_UI_Mobile_Laminado.Commands.UserControl.UC_Switch"
             x:Name="Root">
    
    
    <Grid x:Name="MainGrid"
          WidthRequest="{Binding SwitchWidth, Source={x:Reference Root}}"
          HeightRequest="{Binding SwitchHeight, Source={x:Reference Root}}"
          BackgroundColor="Transparent">

        <!-- Trilha -->
        <Border
            x:Name="Track"
            StrokeShape="RoundRectangle 999"
            BackgroundColor="Gray"
            WidthRequest="{Binding SwitchWidth, Source={x:Reference Root}}"
            HeightRequest="{Binding SwitchHeight, Source={x:Reference Root}}" />

        <!-- Bola (Thumb) -->
        <Frame
            x:Name="Thumb"
            BackgroundColor="White"
            CornerRadius="999"
            HasShadow="True"
            Padding="0"
            WidthRequest="{Binding ThumbSize, Source={x:Reference Root}}"
            HeightRequest="{Binding ThumbSize, Source={x:Reference Root}}"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            TranslationX="0" />

        <!-- BotÃ£o transparente por cima -->
        <Frame
            Background="Transparent"
            >
            <Button
                x:Name="ClickArea"
                BackgroundColor="Transparent"
                Clicked="OnClicked"
                BorderColor="Transparent"
                WidthRequest="{Binding SwitchWidth, Source={x:Reference Root}}"
                HeightRequest="{Binding SwitchHeight, Source={x:Reference Root}}"
                Padding="0"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Frame>


    </Grid>
</ContentView>
